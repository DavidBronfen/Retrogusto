{
  "name": "retrogusto",
  "version": "1.0.0",
  "description": "retrogusto server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src -e ts --exec npm run dev:start",
    "dev:start": "npm-run-all build start",
    "build": "npm-run-all tslint tsc",
    "start": "node .",
    "tsc": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "test": "mocha -r ts-node/register 'src/**/*.spec.ts' --exit",
    "cover": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "all": true
  },
  "author": "David Bronfen",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.5.15"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/lodash": "^4.14.134",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.6",
    "@types/node": "^12.0.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2"
  }
}
